<!DOCTYPE html>
<html lang="en">
 <!-- ***** Preloader Start ***** -->
<div id="preloader">
  <div class="jumper">
      <div></div>
      <div></div>
      <div></div>
  </div>
</div>  
<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<!-- Page Content -->
<div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Edit Blog</h1>
          <span><%= post.title %></span>
        </div>
      </div>
    </div>
  </div>


    <div class="container mt-5 mb-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h2 class="text-center">Edit Post</h2>
                <form action="/update/<%= post._id %>" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">Current Image</label>
                        <br>
                        <img src="/uploads/<%= post.image %>" class="img-fluid rounded"  for="image" style="max-height: 200px;" alt="Post Image">
                        <input type="file" class="form-control mt-2 " id="image"  style="height: 45px;" name="image">
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="5" required><%= post.content %></textarea>
                    </div>
                    <button type="submit" class="btn w-100"   style="background-color:#ff8e32; color:white">Update Post</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <%- include('../partials/script') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
