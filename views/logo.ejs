<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Career Page Effect</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            height: 200vh; /* Make page long enough to scroll */
        }

        /* Sticky Navbar */
        .navbar {
            position: sticky;
            top: 0;
            background-color: #333;
            padding: 10px 0;
            z-index: 100;
            text-align: center;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 20px;
            font-size: 18px;
        }

        /* Gradient Text */
        .gradient-text {
            position: relative;
            font-size: 50px;
            font-weight: bold;
            background: linear-gradient(90deg, #ff7e5f, #feb47b);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-align: center;
            margin-top: 100px;
            z-index: 1;
            transition: background-position 0.5s ease-out;
        }

        /* Gradient Background */
        .gradient-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #ff7e5f, #feb47b);
            z-index: -1;
            background-size: 200% 100%;
        }

    </style>
</head>
<body>

    <!-- Sticky Navbar -->
    <div class="navbar">
        <a href="#about">About</a>
        <a href="#careers">Careers</a>
        <a href="#contact">Contact</a>
    </div>

    <!-- Gradient Background for Effect -->
    <div class="gradient-background"></div>

    <!-- Gradient Text -->
    <h2 class="gradient-text">Working at Systems</h2>

    <script>
        // Scroll Event for Gradient Background Movement
        window.addEventListener('scroll', function () {
            const scrollPosition = window.scrollY;  // Get the scroll position
            const gradientPosition = (scrollPosition * 0.2) % 100;  // Speed of the gradient change

            // Update the background position of the gradient
            document.querySelector('.gradient-background').style.backgroundPosition = `${gradientPosition}% 50%`;
        });
    </script>

</body>
</html>
